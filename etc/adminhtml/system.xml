<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="msp_securitysuite">
            <group id="passwd" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Passwd</label>
                <field id="backend_enabled" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Enable on backend</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="backend_user" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Backend username</label>
                    <depends>
                        <field id="msp_securitysuite/passwd/backend_enabled">1</field>
                    </depends>
                </field>
                <field id="backend_pass" translate="label" type="password" sortOrder="30" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Backend password</label>
                    <depends>
                        <field id="msp_securitysuite/passwd/backend_enabled">1</field>
                    </depends>
                </field>
                <field id="backend_ip_whitelist" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Backend IP whitelist</label>
                    <comment>Comma separated (eg.: 192.168.1.10, 192.168.0.0/24)</comment>
                    <depends>
                        <field id="msp_securitysuite/passwd/backend_enabled">1</field>
                    </depends>
                </field>

                <field id="frontend_enabled" translate="label" type="select" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Enable on frontend</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="frontend_user" translate="label" type="text" sortOrder="110" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Backend username</label>
                    <depends>
                        <field id="msp_securitysuite/passwd/frontend_enabled">1</field>
                    </depends>
                </field>
                <field id="frontend_pass" translate="label" type="password" sortOrder="120" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Backend password</label>
                    <depends>
                        <field id="msp_securitysuite/passwd/frontend_enabled">1</field>
                    </depends>
                </field>
                <field id="frontend_ip_whitelist" translate="label" type="text" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Frontend IP whitelist</label>
                    <comment>Comma separated (eg.: 192.168.1.10, 192.168.0.0/24)</comment>
                    <depends>
                        <field id="msp_securitysuite/passwd/frontend_enabled">1</field>
                    </depends>
                </field>
            </group>
        </section>
    </system>
</config>